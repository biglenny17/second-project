<%= stylesheet_link_tag    "greetings.css" %>
<body id="body">
<h1>Listing devotions</h1>

<table>
  <tr>
    <th>Prayer topic</th>
    <th>Bible text</th>
    <th>Time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @devotions.each do |devotion| %>
  <tr>
    <td><%= devotion.prayer_topic %></td>
    <td><%= devotion.bible_text %></td>
    <td><%= devotion.time %></td>
    <td><%= link_to 'Show', devotion %></td>
    <td><%= link_to 'Edit', edit_devotion_path(devotion) %></td>
    <td><%= link_to 'Destroy', devotion, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Devotion', new_devotion_path %>
</body>